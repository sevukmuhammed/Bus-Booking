<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/adsiz">


    <EditText
        android:id="@+id/email"
        android:layout_width="213dp"
        android:layout_height="44dp"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="130dp"
        android:background="@drawable/textview"
        android:hint="E-mail"
        android:textColor="#8DFFFFFF"
        android:textColorHint="#8DFFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/name"></EditText>

    <EditText
        android:id="@+id/password"
        android:layout_width="213dp"
        android:layout_height="44dp"
        android:background="@drawable/textview"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#8DFFFFFF"
        android:textColorHint="#8DFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/name"
        android:layout_width="213dp"
        android:layout_height="44dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="500dp"
        android:background="@drawable/textview"
        android:hint="Name"
        android:textColor="#8DFFFFFF"
        android:textColorHint="#8DFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></EditText>

    <EditText
        android:id="@+id/password2"
        android:layout_width="213dp"
        android:layout_height="45dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/textview"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="#8DFFFFFF"
        android:textColorHint="#8DFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></EditText>

    <EditText
        android:id="@+id/phone"
        android:layout_width="213dp"
        android:layout_height="40dp"
        android:layout_marginTop="67dp"
        android:layout_marginBottom="67dp"
        android:background="@drawable/textview"
        android:hint="Phone"
        android:textColor="#8DFFFFFF"
        android:textColorHint="#8DFFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/email"></EditText>

    <EditText
        android:id="@+id/surname"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="65dp"
        android:background="@drawable/textview"
        android:hint="Surname"
        android:textColor="#8DFFFFFF"
        android:textColorHint="#8DFFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/email"
        app:layout_constraintEnd_toEndOf="@+id/name"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toTopOf="@+id/name"></EditText>

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="86dp"
        android:layout_marginRight="86dp"
        android:background="@drawable/bg_calen"
        android:text="logın"
        android:textColor="#FFFFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/signUp"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="87dp"
        android:layout_marginLeft="87dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_calen"
        android:text="Sıgn Up"
        android:textColor="#FFFFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password2" />

</androidx.constraintlayout.widget.ConstraintLayout>